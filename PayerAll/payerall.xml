				<field name="key2" type="text" label="VMPAYMENT_PAYERALL_KEY2" description=""/>
				<field name="testmode" type="list" label="VMPAYMENT_PAYERALL_TESTMODE" description="">
                    <option value="0">VMPAYMENT_PAYERALL_No</option>
                    <option value="1">VMPAYMENT_PAYERALL_YES</option>
                </field>
			</fieldset>
		</fields>
	</vmconfig>
